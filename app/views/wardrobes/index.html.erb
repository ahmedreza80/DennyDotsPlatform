<p id="notice"><%= notice %></p>

<h1>Wardrobes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wardrobes.each do |wardrobe| %>
      <tr>
        <td><%= wardrobe.title %></td>
        <td><%= wardrobe.description %></td>
        <td><%= wardrobe.price %></td>
        <td><%= link_to 'Show', wardrobe %></td>
        <td><%= link_to 'Edit', edit_wardrobe_path(wardrobe) %></td>
        <td><%= link_to 'Destroy', wardrobe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wardrobe', new_wardrobe_path %>
